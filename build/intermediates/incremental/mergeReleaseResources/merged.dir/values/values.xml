<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr format="reference" name="rotateToMerchantDialogTheme"/>
    <bool name="return_to_merchant_all_caps">false</bool>
    <bool name="return_to_merchant_single_line">false</bool>
    <color name="background_return_to_merchant">#263338</color>
    <color name="return_to_merchant_text">#FFB1B6B8</color>
    <dimen name="return_to_merchant_icon_margin_left">0dp</dimen>
    <dimen name="return_to_merchant_instr_text_size">22sp</dimen>
    <dimen name="return_to_merchant_title_margin_bottom">8dp</dimen>
    <dimen name="return_to_merchant_title_margin_top">22dp</dimen>
    <dimen name="return_to_merchant_title_text_size">28sp</dimen>
    <string name="app_name">MerchantExample</string>
    <string name="backToRegisterDescription">Rotate to the right back to the merchant</string>
    <string name="no_account">There is no Clover account.</string>
    <string name="permission_pop_cash_drawer">clover.permission.POP_CASH_DRAWER</string>
    <string name="permission_pop_cash_drawer_new">clover.permission.POP_CASH_DRAWER_NEW</string>
    <string name="returnToMerchant">Please return this device to an employee</string>
    <string name="returnToMerchantFontFamily">sans-serif-light</string>
    <string name="returnToMerchantPaymentSuccessful">Thank you for your purchase.\n Please return this device to an employee</string>
    <string name="returnToMerchantTitle">All Done!</string>
    <string name="rotateInstructions">Thanks for your purchase.\nPlease rotate the screen back.</string>
    <string name="title_activity_account_chooser">Clover Accounts</string>
    <style name="DialogThemeNoWindow" parent="android:Theme.Holo.Light.Dialog">
    <item name="android:windowActionBar">false</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowFullscreen">true</item>
  </style>
    <style name="Instructions">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_centerHorizontal">true</item>
    <item name="android:fontFamily">sans-serif-light</item>
    <item name="android:textSize">22sp</item>
    <item name="android:layout_marginBottom">16dp</item>
  </style>
    <style name="ReturnToMerchantInstructions">
    <item name="android:textColor">@color/return_to_merchant_text</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_centerHorizontal">true</item>
    <item name="android:fontFamily">@string/returnToMerchantFontFamily</item>
    <item name="android:textSize">@dimen/return_to_merchant_instr_text_size</item>
    <item name="android:singleLine">@bool/return_to_merchant_single_line</item>
    <item name="android:textAllCaps">@bool/return_to_merchant_all_caps</item>
  </style>
    <style name="ReturnToMerchantTitle">
    <item name="android:textColor">@android:color/white</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_centerHorizontal">true</item>
    <item name="android:fontFamily">sans-serif-thin</item>
    <item name="android:textSize">@dimen/return_to_merchant_title_text_size</item>
    <item name="android:singleLine">true</item>
  </style>
    <style name="RotateToCustomer">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:src">@drawable/rotate_merchant_to_customer</item>
  </style>
    <style name="RotateToMerchant">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:src">@drawable/rotate_customer_to_merchant</item>
  </style>
</resources>